    xmlns:tools="http://schemas.android.com/tools"
    package="qi.ble.communication">


    <uses-feature android:name="android.hardware.bluetooth" />

   <!-- <uses-permission-sdk-23
        android:name="android.permission.ACCESS_FINE_LOCATION"
        tools:node="remove" />
